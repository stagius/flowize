{
  "name": "flowize",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "cp .env.example .env.local",
    "init": "npm install && npm run setup && npm start",
    "start": "concurrently \"npm run dev\" \"npm run bridge:start\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "bridge:start": "node scripts/local-bridge.mjs",
    "specflow": "tsx .opencode/scripts/specflow.ts",
    "specflow:intake": "npm run specflow -- intake",
    "specflow:issues": "npm run specflow -- create-issues",
    "specflow:backfill-branches": "npm run specflow -- backfill-development-branches",
    "specflow:worktrees": "npm run specflow -- provision-worktrees",
    "specflow:pr": "npm run specflow -- create-pr",
    "specflow:merge": "npm run specflow -- merge-pr",
    "specflow:cleanup": "npm run specflow -- cleanup"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/genai": "^1.41.0",
    "lucide-react": "^0.564.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}